<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="152dp"
        android:layout_height="58dp"
        android:layout_above="@+id/name"
        android:layout_marginRight="-153dp"
        android:layout_marginBottom="36dp"
        android:layout_toLeftOf="@+id/name"
        android:background="@drawable/logo" />

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pass"
        android:layout_centerInParent="true"

        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="right"
            android:text="账户  "
            android:textColor="@color/cardview_dark_background"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:hint="请输入账号"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pass"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/rememmber"
        android:layout_centerInParent="true"

        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="right"
            android:text="密码  "
            android:textColor="@color/cardview_dark_background"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:hint="请输入密码"
            android:textSize="20dp"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rememmber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_staff"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="240dp"
        android:layout_marginLeft="262dp"
        android:layout_marginBottom="-1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/remenber_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rememmber"
            android:textSize="16sp"
            android:text="记住帐号和密码" />
    </LinearLayout>

    <Button
        android:id="@+id/login_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rememmber"
        android:layout_marginLeft="-97dp"
        android:layout_marginTop="48dp"
        android:layout_toRightOf="@+id/login_staff"
        android:background="#00000000"
        android:text="管理员登录"
        android:textColor="@drawable/button_login_text"
        android:textSize="18dp" />

    <Button
        android:id="@+id/login_staff"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button_login_background"
        android:textColor="@color/cardview_light_background"
        android:text="登  录"
        android:textSize="20sp" />

</RelativeLayout>
